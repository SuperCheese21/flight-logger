  "components": {
    "schemas": {
      "Token": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "required": ["username", "email", "admin", "privacy"],
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "admin": {
            "type": "boolean"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "privacy": {
            "type": "string",
            "enum": ["public", "friends", "private"]
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "ListMetadata": {
        "type": "object",
        "required": ["page", "pageCount", "limit", "itemCount", "pages"],
        "properties": {
          "page": {
            "type": "integer"
          },
          "pageCount": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "itemCount": {
            "type": "integer"
          },
          "pages": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["number", "url"],
              "properties": {
                "number": {
                  "type": "integer"
                },
                "url": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Aircraft": {
        "type": "object",
        "required": ["_id", "iata", "icao", "names"],
        "properties": {
          "_id": {
            "type": "string"
          },
          "iata": {
            "type": "string"
          },
          "icao": {
            "type": "string"
          },
          "names": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "wiki"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "wiki": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Airline": {
        "type": "object",
        "required": [
          "_id",
          "iata",
          "icao",
          "name",
          "callsign",
          "fleetSize",
          "destinations",
          "logo",
          "wiki"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "iata": {
            "type": "string"
          },
          "icao": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "callsign": {
            "type": "string"
          },
          "fleetSize": {
            "type": "integer"
          },
          "destinations": {
            "type": "integer"
          },
          "logo": {
            "type": "string"
          },
          "wiki": {
            "type": "string"
          }
        }
      },
      "Airport": {
        "type": "object",
        "required": [
          "_id",
          "type",
          "name",
          "location",
          "elevation",
          "continent",
          "country",
          "region",
          "municipality",
          "scheduledService",
          "codes",
          "wiki"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "required": ["lat", "lon"],
            "properties": {
              "lat": {
                "type": "number"
              },
              "lon": {
                "type": "number"
              }
            }
          },
          "elevation": {
            "type": "integer"
          },
          "continent": {
            "type": "string"
          },
          "country": {
            "type": "object",
            "required": ["_id"],
            "properties": {
              "_id": {
                "type": "string"
              }
            }
          },
          "region": {
            "type": "object",
            "required": ["_id"],
            "properties": {
              "_id": {
                "type": "string"
              }
            }
          },
          "municipality": {
            "type": "string"
          },
          "scheduledService": {
            "type": "boolean"
          },
          "codes": {
            "type": "object",
            "required": ["ident", "gps", "iata", "local"],
            "properties": {
              "ident": {
                "type": "string"
              },
              "gps": {
                "type": "string"
              },
              "iata": {
